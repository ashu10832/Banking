<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bom.india_hackaton">

    <!-- Phone state -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Save external (logs) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.bom.india_hackaton.App"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.bom.india_hackaton.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.bom.india_hackaton.activities.LoginActivity"
            android:launchMode="singleTop" />
        <activity android:name="org.bom.india_hackaton.activities.BankingHomeActivity" />
        <activity android:name="org.bom.india_hackaton.activities.AccountInfoActivity" />
        <activity android:name="org.bom.india_hackaton.activities.AccountListActivity" />
        <activity android:name="org.bom.india_hackaton.activities.TransactionHistoryActivity" />
        <activity android:name="org.bom.india_hackaton.activities.imt.ImtActivity" />
        <activity android:name="org.bom.india_hackaton.activities.fundtransfer.FundTransferActivity" />
    </application>

</manifest>